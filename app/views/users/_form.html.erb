<%= form_with url: "/users", method: :post , model: @user do |user_form| %>
  <%= user_form.label :query, "Username:" %>
  <%= user_form.text_field :username %>
  <%= user_form.label :query, "Email:" %>
  <%= user_form.email_field :email %>
  <%= fields_for :user_detail, @user.user_detail do |user_detail_form| %>
    <%= user_form.label :query, "First Name:" %>
    <%= user_detail_form.text_field :first_name %>
    <%= user_form.label :query, "Last Name:" %>
    <%= user_detail_form.text_field :last_name %>
    <%= user_form.label :query, "Address:" %>
    <%= user_detail_form.text_field :address %>
    <%= user_form.label :query, "DOB:" %>
    <%= user_detail_form.date_field :dob %>
  <% end %>
  <%= user_form.submit "create" %>
<% end %>